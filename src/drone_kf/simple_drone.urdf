  </joint>
  
  <!-- Front Right Rotor -->
  <link name="rotor_front_right">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.01"/>
      </geometry>
      <material name="Red">
        <color rgba="1.0 0.0 0.0 0.7"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.02"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.0001" iyz="0.0" 
               izz="0.0002"/>
    </inertial>
  </link>
  
  <joint name="rotor_front_right_joint" type="continuous">
    <parent link="arm_front_right"/>
    <child link="rotor_front_right"/>
    <origin xyz="0.15 0.0 0.03" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  
  <!-- Front Left Rotor -->
  <link name="rotor_front_left">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.01"/>
