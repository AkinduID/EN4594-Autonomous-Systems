    </inertial>
  </link>
  
  <joint name="arm_rear_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="arm_rear_right"/>
    <origin xyz="0.0875 -0.0875 0.0" rpy="0 0 -0.785398"/>
  </joint>
  
  <!-- Rear Left Arm -->
