  <!-- Camera/Sensor Module -->
  <link name="camera">
    <visual>
      <geometry>
        <box size="0.04 0.08 0.03"/>
      </geometry>
      <material name="DarkBlue">
        <color rgba="0.0 0.2 0.4 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" 
               iyy="0.00001" iyz="0.0" 
               izz="0.00001"/>
    </inertial>
  </link>
  
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera"/>
    <origin xyz="0.15 0.0 -0.025" rpy="0 0.2 0"/>
  </joint>
  
  <!-- Gazebo materials and physics -->
  <gazebo reference="base_link">
    <material>Gazebo/Black</material>
    <turnGravityOff>true</turnGravityOff>
  </gazebo>
  
  <gazebo reference="arm_front_right">
    <material>Gazebo/Grey</material>
  </gazebo>
  
  <gazebo reference="arm_front_left">
    <material>Gazebo/Grey</material>
  </gazebo>
  
  <gazebo reference="arm_rear_right">
