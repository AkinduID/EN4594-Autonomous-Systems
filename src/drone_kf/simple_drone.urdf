<?xml version="1.0"?>
<robot name="simple_drone">
  
  <!-- Main Body/Frame -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.08"/>
      </geometry>
      <material name="Black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.08"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0347" ixy="0.0" ixz="0.0" 
               iyy="0.0347" iyz="0.0" 
               izz="0.0675"/>
    </inertial>
  </link>
  
  <!-- Front Right Arm -->
  <link name="arm_front_right">
    <visual>
      <geometry>
        <box size="0.35 0.03 0.02"/>
      </geometry>
      <material name="DarkGray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.35 0.03 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.0005" iyz="0.0" 
               izz="0.0005"/>
    </inertial>
  </link>
  
  <joint name="arm_front_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="arm_front_right"/>
    <origin xyz="0.0875 0.0875 0.0" rpy="0 0 0.785398"/>
  </joint>
  
  <!-- Front Left Arm -->
  <link name="arm_front_left">
    <visual>
      <geometry>
        <box size="0.35 0.03 0.02"/>
      </geometry>
      <material name="DarkGray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.35 0.03 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.0005" iyz="0.0" 
               izz="0.0005"/>
    </inertial>
  </link>
  
  <joint name="arm_front_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="arm_front_left"/>
    <origin xyz="-0.0875 0.0875 0.0" rpy="0 0 2.356194"/>
  </joint>
  
  <!-- Rear Right Arm -->
  <link name="arm_rear_right">
    <visual>
      <geometry>
        <box size="0.35 0.03 0.02"/>
      </geometry>
      <material name="DarkGray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
